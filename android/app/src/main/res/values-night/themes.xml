<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Tema para el modo oscuro con soporte para gesture bar -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colores principales para modo oscuro -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimary</item>
    
    <!-- Configuración para la gesture bar en modo oscuro -->
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    
    <!-- Configuración para el color de la barra de navegación -->
    <item name="android:navigationBarColor">@color/navigationBarColor</item>
    
    <!-- Configuración para el color de los iconos de navegación en modo oscuro -->
    <item name="android:windowLightNavigationBar">false</item>
    
    <!-- Configuración para el color de la barra de estado -->
    <item name="android:statusBarColor">@color/statusBarColor</item>
    
    <!-- Configuración para el color de los iconos de la barra de estado en modo oscuro -->
    <item name="android:windowLightStatusBar">false</item>
    
    <!-- Configuración para el comportamiento de la gesture bar -->
    <item name="android:windowTranslucentNavigation">false</item>
    <item name="android:windowTranslucentStatus">false</item>
    
    <!-- Configuración para el comportamiento del teclado -->
    <item name="android:windowSoftInputMode">adjustResize</item>
    
    <!-- Configuración para el fondo de la ventana en modo oscuro -->
    <item name="android:windowBackground">@color/splashscreen_background</item>
    
    <!-- Configuración para el comportamiento de la gesture bar en modo oscuro -->
    <item name="android:windowInsetsControllerAppearance">dark</item>
  </style>
</resources>