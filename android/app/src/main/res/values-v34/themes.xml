<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Tema para Android 14+ (API 34+) con soporte completo para gesture bar -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colores principales -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimary</item>
    
    <!-- Configuración para la gesture bar en Android 14+ -->
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    
    <!-- Configuración para el color de la barra de navegación -->
    <item name="android:navigationBarColor">@color/navigationBarColor</item>
    
    <!-- Configuración para el color de los iconos de navegación -->
    <item name="android:windowLightNavigationBar">true</item>
    
    <!-- Configuración para el color de la barra de estado -->
    <item name="android:statusBarColor">@color/statusBarColor</item>
    
    <!-- Configuración para el color de los iconos de la barra de estado -->
    <item name="android:windowLightStatusBar">true</item>
    
    <!-- Configuración para el comportamiento de la gesture bar -->
    <item name="android:windowTranslucentNavigation">false</item>
    <item name="android:windowTranslucentStatus">false</item>
    
    <!-- Configuración para el comportamiento del teclado -->
    <item name="android:windowSoftInputMode">adjustResize</item>
    
    <!-- Configuración para el fondo de la ventana -->
    <item name="android:windowBackground">@color/splashscreen_background</item>
    
    <!-- Configuración específica para Android 14+ -->
    <item name="android:enforceNavigationBarContrast">false</item>
    <item name="android:enforceStatusBarContrast">false</item>
    
    <!-- Configuración para el comportamiento de la gesture bar -->
    <item name="android:windowInsetsControllerAppearance">light</item>
    
    <!-- Configuración para el comportamiento de la gesture bar en Android 14+ -->
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
    <item name="android:windowSplashScreenBackground">@color/splashscreen_background</item>
    
    <!-- Configuración para el comportamiento de la gesture bar en Android 14+ -->
    <item name="android:windowSplashScreenBrandingImage">@drawable/splashscreen_logo</item>
    
    <!-- Configuración para el comportamiento de la gesture bar en Android 14+ -->
    <item name="android:windowSplashScreenIconBackgroundColor">@color/splashscreen_background</item>
  </style>
</resources>
