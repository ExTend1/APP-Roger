<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@android:color/white</item>
        
        <!-- Configuración para la gesture bar -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Configuración para el color de la barra de navegación -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Configuración para el color de los iconos de navegación -->
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Configuración para el color de la barra de estado -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        
        <!-- Configuración para el color de los iconos de la barra de estado -->
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Configuración para el comportamiento de la gesture bar -->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        
        <!-- Configuración para el comportamiento del teclado -->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>