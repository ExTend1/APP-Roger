<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Tema base para la app -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colores principales -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimary</item>
    
    <!-- Configuración para la gesture bar -->
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    
    <!-- Configuración para el color de la barra de navegación -->
    <item name="android:navigationBarColor">@color/navigationBarColor</item>
    
    <!-- Configuración para el color de los iconos de navegación -->
    <item name="android:windowLightNavigationBar">true</item>
    
    <!-- Configuración para el color de la barra de estado -->
    <item name="android:statusBarColor">@color/statusBarColor</item>
    
    <!-- Configuración para el color de los iconos de la barra de estado -->
    <item name="android:windowLightStatusBar">true</item>
    
    <!-- Configuración para el comportamiento de la gesture bar -->
    <item name="android:windowTranslucentNavigation">false</item>
    <item name="android:windowTranslucentStatus">false</item>
    
    <!-- Configuración para el comportamiento del teclado -->
    <item name="android:windowSoftInputMode">adjustResize</item>
    
    <!-- Configuración para el fondo de la ventana -->
    <item name="android:windowBackground">@color/splashscreen_background</item>
  </style>
  
  <!-- Tema para el splash screen -->
  <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/splashscreen_background</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>
</resources>
